# Depends:
#  pkg-config
# Optional depends:
#  jack, pulseaudio, libsamplerate, libudev, pthreads, alsa, esd, fusionsound, rpi directfb, libdrm, libusb, IBUS, FCITX

depends=(pkg-config)
if ${os_win}; then
	depends+=(winpthreads)
fi

ver="2.0.10"
dname="${name}-${ver}"
fname="${dname}.tar.gz"
src="https://libsdl.org/release/${fname}"

cmd_config=(cmake)

# disable everything not used by MyABCs
# FIXME: can't disable video, joystick, haptic, sensor, power, nor threads
config_opts=(
	-DSDL_ATOMIC=OFF
	-DSDL_EVENTS=OFF
	-DSDL_FILE=OFF
	-DSDL_FILESYSTEM=OFF
	-DSDL_TIMERS=OFF
)

if ${os_win} || ! ${static}; then
	libtype_opts=(
		-DSDL_STATIC=OFF
		-DSDL_SHARED=ON
	)
else
	libtype_opts=(
		-DSDL_STATIC=ON
		-DSDL_SHARED=OFF
	)
fi
