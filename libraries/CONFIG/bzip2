VER="1.0.8"
DNAME="${NAME}-${VER}"
FNAME="${DNAME}.tar.gz"
SOURCE="https://sourceware.org/pub/bzip2/${FNAME}"

if ${STATIC}; then
	LIBTYPE_OPTS=(--enable-shared=no)
else
	LIBTYPE_OPTS=(--enable-shared=yes)

	post_install() {
		rm -vf "${INSTALL_PREFIX}/lib/libbz2.a"
	}
fi

post_extract() {
	autoreconf -fiv
}
