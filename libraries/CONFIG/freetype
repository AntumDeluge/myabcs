# Depends on:
#  pkg-config, libintl (gettext)
# Optional depends
#  zlib, libpng, bzip2, harfbuzz

depends=(pkg-config libpng bzip2)

ver="2.10.1"
dname="${name}-${ver}"
fname="${dname}.tar.xz"
src="https://download.savannah.gnu.org/releases/freetype/${fname}"

config_opts=(
	--enable-freetype-config
	--with-zlib=yes
	--with-bzip2=yes
	--with-png=yes
	--with-harfbuzz=no
)
