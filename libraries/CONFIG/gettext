PRE_CONF=(
	"libtoolize --automake --copy --force"
	"./autogen.sh --skip-gnulib"
)

CONFIG_OPTS=(
	--disable-curses
	--with-included-libxml
	--with-included-regex
	--with-included-libunistring
	--without-xz
)
