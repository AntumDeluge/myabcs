# Depends on:
#  libiconv
# Optional depends:
#  libogg, nasm

depends=(nasm libogg)

ver="1.3.2"
dname="${name}-${ver}"
extract_name="flac-${ver}"
fname="${extract_name}.tar.xz"
src="http://downloads.xiph.org/releases/flac/${fname}"

config_opts=(
	--disable-doxygen-docs
	--disable-xmms-plugin
	--disable-cpplibs
	--enable-ogg
)

if ${os_win}; then
	# FLAC only works if using shared DLL
	# FIXME: DLL not building
	libtype_opts+=(
		--enable-static=no
		--enable-shared=yes
	)
fi
