# Depends on:
#  pkg-config, SDL2
# Optional depends:
#  yasm, jack, pulse, portaudio

DEPENDS=(pkg-config SDL2)

VER="1.25.11"
DNAME="${NAME}-${VER}"
EXTRACT_NAME="mpg123-${VER}"
FNAME="${EXTRACT_NAME}.tar.bz2"
SOURCE="https://sourceforge.net/projects/mpg123/files/mpg123/${VER}/${FNAME}/download"

# don't support mpg1/2 audio
CONFIG_OPTS=(
	--disable-layer1
	--disable-layer2
)
