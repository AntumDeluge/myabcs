# Depends on:
#  pkg-config, cairo, glib
# Optional depends:
#  harfbuzz, fontconfig, freetype

# Update available: 1.44.1

DEPENDS=(fribidi cairo)

VER="1.43.0"
DNAME="${NAME}-${VER}"
FNAME="${DNAME}.tar.xz"
SOURCE="https://download.gnome.org/sources/pango/${VER%.*}/${FNAME}"
CMD_CONFIG=(meson)
CMD_BUILD=(ninja)
CMD_INSTALL=(ninja install)
CONFIG_OPTS=(-Dgir=false)
LIBS="`pkg-config cairo --libs --static` -lstdc++"
LDFLAGS="${LIBS}"
