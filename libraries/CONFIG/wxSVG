# Depends:
#  pkg-config, wxWidgets, cairo, pango, expat, libexif, freetype
# Optional depends:
#  libav (ffmpeg)

depends=(libexif pango wxWidgets)

ver="1.5.20"
dname="wxsvg-${ver}"
fname="${dname}.tar.bz2"
src="https://downloads.sourceforge.net/sourceforge/wxsvg/wxsvg/${ver}/${fname}"

config_opts=(
	--with-wx-prefix="${install_prefix}"
	--with-wx-exec-prefix="${install_prefix}"
	--with-wx-config="${install_prefix}/bin/wx-config"
	--enable-libav=no
)

# FIXME: DLL not building
if ${os_win}; then
	libtype_opts=(
		--enable-shared=yes
		--enable-static=no
	)
fi
